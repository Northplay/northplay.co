{{> header}}

<section class="header-section">
  <video class="header-section__big-video" playsinline autoplay muted loop poster="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" id="big_video" style="visibility:none;" onplay="var s=this;setTimeout(function(){s.style.visibility='visible';},100);">
    <source src="/videos/background-loop.mp4" type="video/mp4">
    <source src="/videos/background-loop.webm" type="video/webm">
  </video>

  <div class="header">
    {{{img "header-logo.png" "header__logo"}}}
    <div class="header__weare">We are Northplay. <br>An Entertainment <br>Design Studio.</div>
    <div class="header__team">A small passionate team of highly specialized individuals<br>making unique digital products that entertain.</div>
    <a href="mailto:hey@northplay.co" class="header__talk">Let's talk</a>
  </div>
</section>

<style>
{{#each data.products }}
  {{#each style as |rules selector|}}
    {{selector}} {
    {{#each rules as |value name|}}
      {{name}}: {{value}};
    {{/each}}
    }
  {{/each}}
{{/each}}
</style>

{{#each data.products }}
<section class="product-section product-section--{{id}}" style="background-color: {{tint}}">
  <div class="product product--{{id}}">
    <div class="product__preview">
      <img src="/images/product-preview-{{id}}.png" data-at2x="/images/product-preview-{{id}}_2x.png">
    </div>
    <div class="product__info">
      <a href="/{{id}}" class="product__icon">
        <img src="/images/product-icon-{{id}}.png" data-at2x="/images/product-icon-{{id}}_2x.png" alt="{{name}} App icon">
      </a>
      <div class="product__name">{{name}}</div>
      <div class="product__description">{{description}}</div>
      <a href="/{{id}}" class="product__learn-more">Learn more</a>
      <div class="product__publisher">{{publisher}}</div>
    </div>
  </div>
</section>
{{/each}}

